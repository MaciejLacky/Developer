@model Developer.Models.CMS.LogBuilding

@{
    ViewBag.Title = "Delete";
}

<div class="pb-3 pt-3">
    @Html.ActionLink("Wstecz", "Index")
</div>

<h3 class="text-info pt-3 pb-3">Czy napewno usunąć wpis?</h3>
<div class="container">
    <div class="card mb-3 " style="background-color: #FAFAFA">
        <div class="card-body">
            <div class="portfolio-header text-center font-weight-bold">
                @Html.DisplayFor(model => model.Title)
            </div>
            <dl class="dl-horizontal ">
                <dd class="pl-3">
                    @Html.DisplayFor(model => model.Content)
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color d-flex justify-content-center pt-3">
                    <input type="submit" value="Usuń" class="btn btn-danger col-lg-2 " />
                </div>
            }
        </div>
    </div>
    
</div>
